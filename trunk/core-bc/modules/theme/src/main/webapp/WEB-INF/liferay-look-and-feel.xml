<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.0+</version>
	</compatibility>
	<theme id="rp-bootstrap-theme" name="RP Bootstrap Theme">

		<settings>
			<setting key="global-info-header" value="" configurable="true" type="text" />
			<setting key="portlet-setup-show-borders-default" value="true" configurable="true" type="checkbox" />
			<setting key="use-rp-nav-portlet" value="true" configurable="true" type="checkbox" />
			<setting key="show-breadcrumbs" value="true" configurable="true" type="checkbox" />
			<setting key="show-notifications-bar" value="true" configurable="true" type="checkbox" />
			<setting key="show-my-sites" value="false" configurable="true" type="checkbox" />
			<setting key="show-tyck-till" value="true" configurable="true" type="checkbox" />
			<setting key="show-top-navigation-wrap" value="true" configurable="true" type="checkbox" />
			<setting key="additional-logo-class" value="rp" configurable="true" type="select" options="rp, vgr-portal" />
		</settings>

	</theme>
</look-and-feel>